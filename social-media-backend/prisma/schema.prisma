generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id")
  username  String @unique
  email     String @unique
  password  String
  posts     Post[]
}

model Post {
  id        String @id @default(auto()) @map("_id")
  title     String
  content   String
  imageUrl  String?
  author    User @relation(fields: [authorId], references: [id])
  authorId  String
}
